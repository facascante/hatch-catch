extends layout

block content
	body.gender-page
		.header-wrapper
			.header
		.gender-container
			.choose-gender-box
				h1 Are you?
				p Please specify your gender.
				button#but-male.male
					input(type='radio', id='gender-m', name='gender-m', value='Male', hidden='true')
				button#but-female.female
					input(type='radio', id='gender-f', name='gender-f', value='Female', hidden='true')
				.username-box
					center
						.username-wrapper
							input#username(type='text', name='username')
		include footer
		script
			$('#but-male').click(function(ev) {
				$('#but-male').not(this).css('background-image', 'url(/img/hc-theme/male-radio-n.png)').removeClass('s');
				if(!$(this).is('.s')){
					$(this).css('background-image', 'url(/img/hc-theme/male-radio-s.png)').addClass('s');
					$('#gender-m').attr("checked", true);
					$('#gender-f').attr("checked", false);
					$('#but-female').css('background-image', 'url(/img/hc-theme/female-radio-n.png)').removeClass('s');
				}
				else{
					$('#gender-m').attr("checked", false);
					$(this).css('background-image', 'url(/img/hc-theme/male-radio-n.png)').removeClass('s');
					$('#but-female').css('background-image', 'url(/img/hc-theme/female-radio-n.png)').removeClass('s');
				}
			});
			$('#but-female').click(function(ev) {
				$('#but-female').not(this).css('background-image', 'url(/img/hc-theme/female-radio-n.png)').removeClass('s');
				if(!$(this).is('.s')){
					$(this).css('background-image', 'url(/img/hc-theme/female-radio-s.png)').addClass('s');
					$('#gender-f').attr("checked", true);
					$('#gender-m').attr("checked", false);
					$('#but-male').css('background-image', 'url(/img/hc-theme/male-radio-n.png)').removeClass('s');
				}
				else{
					$('#gender-f').attr("checked", false);
					$(this).css('background-image', 'url(/img/hc-theme/female-radio-n.png)').removeClass('s');
					$('#but-male').css('background-image', 'url(/img/hc-theme/male-radio-n.png)').removeClass('s');
				}
			});
